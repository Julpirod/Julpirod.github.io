<script type="text/javascript">if (window.name.length>2){window.resizeTo(900,420);}</script>
<div class="preview_pop main_index">
[short-preview]
<div class="viewn_bg"><div class="vl"></div><div class="vr"></div></div>
<article class="viewn">
  <div class="in_bg">
    <div class="v_cont">
      <div class="v_c_in">
        <header><h1>[full-link]{title}[/full-link]</h1></header>
        <div class="v_text">{short-story}</div>
      </div>
      <footer>
				[not-group=5]<div class="v_sys"><div class="v_edit">[edit][/edit]</div> <div class="v_favorite">{favorites}</div></div>[/not-group]
        <div class="v_link">[full-link]Смотреть подробнее[/full-link]</div>
        Категория: {link-category}
      </footer>
    </div>
  </div>
</article>
[/short-preview]
[full-preview]
<div class="viewn_bg"><div class="vl"></div><div class="vr"></div></div>
<article class="viewn">
  <div class="in_bg">
    <div class="v_cont">
      <div class="v_c_in">
        <header><h1>{title}</h1></header>
        <div class="v_text">{full-story}</div>
      </div>
      <footer>
				[not-group=5]<div class="v_sys"><div class="v_edit">[edit][/edit]</div> <div class="v_favorite">{favorites}</div></div>[/not-group]
        Категория: {link-category}
      </footer>
    </div>
  </div>
</article>
[/full-preview]
[static-preview]
<div class="viewn_bg"><div class="vl"></div><div class="vr"></div></div>
<article class="viewn v_static">
  <div class="in_bg">
		<header><h1>{description}</h1></header>
    {static}
    <br>
    <div class="storenumber">{pages}</div>
    
  </div>
</article>
[/static-preview]
</div>